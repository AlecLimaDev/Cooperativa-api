{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "types": ["node", "fastify"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
